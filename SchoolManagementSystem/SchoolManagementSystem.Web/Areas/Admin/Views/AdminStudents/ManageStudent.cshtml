@model StudentManageViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = "Manage Student Profile";
}

<h2>@Localizer["Title"] @Model.FirstName @Model.MiddleName @Model.LastName</h2>

<form asp-action="ManageStudent" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group mb-3">
        <label for="FirstName">@Localizer["FirstName"]</label>
        <input type="text" id="FirstName" name="FirstName" class="form-control" value="@Model.FirstName"/>
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label for="MiddleName">@Localizer["MiddleName"]</label>
        <input type="text" id="MiddleName" name="MiddleName" class="form-control" value="@Model.MiddleName"/>
        <span asp-validation-for="MiddleName" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label for="LastName">@Localizer["LastName"]</label>
        <input type="text" id="LastName" name="LastName" class="form-control" value="@Model.LastName"/>
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label for="IdNumber">@Localizer["Id"]</label>
        <input type="text" id="IdNumber" name="IdNumber" class="form-control" value="@Model.IdNumber"/>
        <span asp-validation-for="IdNumber" class="text-danger"></span>
    </div>

    @* Add space between the fields and the save button *@
    <div class="form-group mt-4">
        <button type="submit" class="btn btn-primary">@Localizer["Save"]</button>
    </div>
</form>

@* Include the validation script *@
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}