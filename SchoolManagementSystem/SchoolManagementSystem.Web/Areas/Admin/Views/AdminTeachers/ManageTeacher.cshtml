@model TeacherManageViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = "Manage Teacher";
}

<h2>@Localizer["Title"] @Model.FirstName @Model.MiddleName @Model.LastName</h2>

<form asp-action="ManageTeacher" method="post">
    @Html.AntiForgeryToken()
    
    <div class="form-group mb-3">
        <label asp-for="FirstName" class="control-label">@Localizer["FirstName"]</label>
        <input asp-for="FirstName" class="form-control" required />
        <span class="text-danger" asp-validation-for="FirstName"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="MiddleName" class="control-label">@Localizer["MiddleName"]</label>
        <input asp-for="MiddleName" class="form-control" />
        <span class="text-danger" asp-validation-for="MiddleName"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="LastName" class="control-label">@Localizer["LastName"]</label>
        <input asp-for="LastName" class="form-control" required />
        <span class="text-danger" asp-validation-for="LastName"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Subject" class="control-label">@Localizer["Subject"]</label>
        <select asp-for="Subject" class="form-control" asp-items="@(new SelectList(Model.Subjects))">
            <option value="">@Localizer["SelectSubject"]</option>
        </select>
        <span class="text-danger" asp-validation-for="Subject"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="IdNumber" class="control-label">@Localizer["Id"]</label>
        <input asp-for="IdNumber" class="form-control" required />
        <span class="text-danger" asp-validation-for="IdNumber"></span>
    </div>

    <button type="submit" class="btn btn-primary">@Localizer["Save"]</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}