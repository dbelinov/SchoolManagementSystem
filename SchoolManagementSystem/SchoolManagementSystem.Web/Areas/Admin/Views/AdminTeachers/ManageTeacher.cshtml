@model TeacherManageViewModel

@{
    ViewData["Title"] = "Manage Teacher";
}

<h2>Manage Teacher Profile of @Model.FirstName @Model.MiddleName @Model.LastName</h2>

<form asp-action="ManageTeacher" method="post">
    @Html.AntiForgeryToken()
    
    <div class="form-group mb-3">
        <label asp-for="FirstName" class="control-label">First Name</label>
        <input asp-for="FirstName" class="form-control" required />
        <span class="text-danger" asp-validation-for="FirstName"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="MiddleName" class="control-label">Middle Name</label>
        <input asp-for="MiddleName" class="form-control" />
        <span class="text-danger" asp-validation-for="MiddleName"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="LastName" class="control-label">Last Name</label>
        <input asp-for="LastName" class="form-control" required />
        <span class="text-danger" asp-validation-for="LastName"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Subject" class="control-label">Subject</label>
        <select asp-for="Subject" class="form-control" asp-items="@(new SelectList(Model.Subjects))">
            <option value="">Select a Subject</option>
        </select>
        <span class="text-danger" asp-validation-for="Subject"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="IdNumber" class="control-label">Identificator</label>
        <input asp-for="IdNumber" class="form-control" required />
        <span class="text-danger" asp-validation-for="IdNumber"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}