@model TeacherCreateViewModel

<form asp-action="CreateTeacher" method="post" id="createTeacherForm">
    @Html.AntiForgeryToken()

    <div class="form-group mb-3">
        <label asp-for="FirstName" class="control-label">First Name</label>
        <input asp-for="FirstName" class="form-control"/>
        <span class="text-danger" asp-validation-for="FirstName"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="MiddleName" class="control-label">Middle Name</label>
        <input asp-for="MiddleName" class="form-control"/>
        <span class="text-danger" asp-validation-for="MiddleName"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="LastName" class="control-label">Last Name</label>
        <input asp-for="LastName" class="form-control"/>
        <span class="text-danger" asp-validation-for="LastName"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="IdNumber" class="control-label">Identificator</label>
        <input asp-for="IdNumber" class="form-control"/>
        <span class="text-danger" asp-validation-for="IdNumber"></span>
    </div>

    <!-- Select for Subject -->
    <div class="form-group mb-3">
        <label asp-for="Subject" class="control-label">Subject</label>
        <select asp-for="Subject" class="form-control" asp-items="@(new SelectList(Model.Subjects))">
            <option value="">Select a Subject</option>
        </select>
        <span class="text-danger" asp-validation-for="Subject"></span>
    </div>

    <!-- Select for School -->
    <div class="form-group mb-3">
        <label asp-for="SchoolId" class="control-label">School</label>
        <select asp-for="SchoolId" class="form-control" id="SchoolId" asp-items="@(new SelectList(Model.Schools, "SchoolId", "Name"))">
            <option value="">Select a School</option>
        </select>
        <span class="text-danger" asp-validation-for="SchoolId"></span>
    </div>

    <!-- Text Field for Classes -->
    <div class="form-group mb-3">
        <label for="Classes">Class IDs (Comma Separated)</label>
        <input type="text" class="form-control" id="Classes" name="Classes" placeholder="Enter Class IDs separated by commas"/>
        <span class="text-danger" asp-validation-for="Classes"></span>
    </div>

    <!-- Submit Button -->
    <button type="submit" class="btn btn-primary mt-3">Create</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}