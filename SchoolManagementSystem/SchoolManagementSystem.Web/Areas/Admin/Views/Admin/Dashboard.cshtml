@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="text-center">Admin Dashboard</h1>
            <p class="text-muted text-center">Welcome to the Scholario admin panel!</p>
        </div>
    </div>

    <div class="row">
        <!-- Manage Students -->
        <div class="col-md-3 mb-4">
            <div class="card shadow-sm text-center">
                <div class="card-body">
                    <h5 class="card-title">Manage Students</h5>
                    <p class="card-text">Manage student profiles.</p>
                    <a asp-controller = "AdminStudents" asp-action="StudentsList" class="btn btn-primary btn-block">Manage Students</a>
                </div>
            </div>
        </div>

        <!-- Manage Teachers -->
        <div class="col-md-3 mb-4">
            <div class="card shadow-sm text-center">
                <div class="card-body">
                    <h5 class="card-title">Manage Teachers</h5>
                    <p class="card-text">Manage teacher profiles.</p>
                    <a asp-controller="AdminTeachers" asp-action="TeachersList" class="btn btn-secondary btn-block">Manage Teachers</a>
                </div>
            </div>
        </div>

        <!-- Manage Schools -->
        <div class="col-md-3 mb-4">
            <div class="card shadow-sm text-center">
                <div class="card-body">
                    <h5 class="card-title">Manage Schools</h5>
                    <p class="card-text">Add, edit, or remove school data.</p>
                    <a asp-controller="AdminSchools" asp-action="SchoolsList" class="btn btn-success btn-block">Manage Schools</a>
                </div>
            </div>
        </div>
        
        <!-- Manage Projects -->
        <div class="col-md-3 mb-4">
            <div class="card shadow-sm text-center">
                <div class="card-body">
                    <h5 class="card-title">Manage Projects</h5>
                    <p class="card-text">Create and manage projects.</p>
                    <a asp-controller="AdminProjects" asp-action="SchoolsList" class="btn btn-warning btn-block">Manage Projects</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12 text-center">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="btn btn-danger">Logout</button>
            </form>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 10px;
    }
    .btn-block {
        width: 100%;
    }
</style>
