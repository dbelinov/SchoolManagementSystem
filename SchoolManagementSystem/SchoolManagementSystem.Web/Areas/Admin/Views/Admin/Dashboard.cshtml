@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="text-center">@Localizer["Title"]</h1>
            <p class="text-muted text-center">@Localizer["Welcome"]</p>
        </div>
    </div>

    <div class="row">
        <!-- Manage Students -->
        <div class="col-md-3 mb-4">
            <div class="card shadow-sm text-center">
                <div class="card-body">
                    <h5 class="card-title">@Localizer["ManageStudents"]</h5>
                    <p class="card-text">@Localizer["ManageStudentsText"]</p>
                    <a asp-controller = "AdminStudents" asp-action="StudentsList" class="btn btn-primary btn-block">@Localizer["ManageStudents"]</a>
                </div>
            </div>
        </div>

        <!-- Manage Teachers -->
        <div class="col-md-3 mb-4">
            <div class="card shadow-sm text-center">
                <div class="card-body">
                    <h5 class="card-title">@Localizer["ManageTeachers"]</h5>
                    <p class="card-text">@Localizer["ManageTeachersText"]</p>
                    <a asp-controller="AdminTeachers" asp-action="TeachersList" class="btn btn-secondary btn-block">@Localizer["ManageTeachers"]</a>
                </div>
            </div>
        </div>

        <!-- Manage Schools -->
        <div class="col-md-3 mb-4">
            <div class="card shadow-sm text-center">
                <div class="card-body">
                    <h5 class="card-title">@Localizer["ManageSchools"]</h5>
                    <p class="card-text">@Localizer["ManageSchoolsText"]</p>
                    <a asp-controller="AdminSchools" asp-action="SchoolsList" class="btn btn-success btn-block">@Localizer["ManageSchools"]</a>
                </div>
            </div>
        </div>
        
        <!-- Manage Projects -->
        <div class="col-md-3 mb-4">
            <div class="card shadow-sm text-center">
                <div class="card-body">
                    <h5 class="card-title">@Localizer["ManageProjects"]</h5>
                    <p class="card-text">@Localizer["ManageProjectsText"]</p>
                    <a asp-controller="AdminProjects" asp-action="SchoolsList" class="btn btn-warning btn-block">@Localizer["ManageProjects"]</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12 text-center">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="btn btn-danger">@Localizer["Logout"]</button>
            </form>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 10px;
    }
    .btn-block {
        width: 100%;
    }
</style>
