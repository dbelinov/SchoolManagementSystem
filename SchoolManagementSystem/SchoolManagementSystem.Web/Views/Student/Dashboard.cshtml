@model StudentDashboardViewModel

@{
    ViewData["Title"] = "Student Dashboard";
}

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <nav class="col-md-3 col-lg-2 d-md-block bg-light sidebar">
            <div class="position-sticky pt-3">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link active" href="#">
                            <i class="bi bi-house-door-fill"></i> Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="Grades">
                            <i class="bi bi-journal"></i> Grades
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <i class="bi bi-briefcase"></i> Projects
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        <!-- Main content -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">Dashboard</h1>
            </div>

            <div class="row">
                <!-- Average Grade -->
                <div class="col-md-4">
                    <div class="card text-white bg-primary mb-3">
                        <div class="card-body">
                            <h5 class="card-title">Average Grade</h5>
                            <p class="card-text display-4">@Model.AverageGrade</p>
                        </div>
                    </div>
                </div>

                <!-- Total Grade Count -->
                <div class="col-md-4">
                    <div class="card text-white bg-success mb-3">
                        <div class="card-body">
                            <h5 class="card-title">Total Grade Count</h5>
                            <p class="card-text display-4">@Model.GradesCount</p>
                        </div>
                    </div>
                </div>

                <!-- Project Count -->
                <div class="col-md-4">
                    <div class="card text-white bg-warning mb-3">
                        <div class="card-body">
                            <h5 class="card-title">Project Count</h5>
                            <p class="card-text display-4">@Model.ProjectsCount</p>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>