@model IEnumerable<SchoolViewModel>
@{
    ViewData["Title"] = "Schools Overview";
}

<h1>Welcome to Scholario!</h1>
<p class="text-muted">Explore schools in the system and learn more about them.</p>

<div class="mt-4">
    @if (Model.Any())
    {
        <div class="row">
            @foreach (var school in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <div class="card-body d-flex flex-column">
                            <div class="text-center">
                                <img src="@school.LogoUrl" alt="@school.Name Logo" class="img-fluid mb-3" style="max-height: 150px; object-fit: contain;" />
                            </div>
                            <h5 class="card-title text-center">@school.Name</h5>
                            <h6 class="card-subtitle mb-2 text-muted text-center">@school.Address</h6>
                            <p class="card-text flex-grow-1">@school.Description</p>
                        </div>
                        <div class="card-footer">
                            <a asp-page="/Schools/Details" asp-route-id="@school.Id" class="btn btn-primary w-100">View Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p>No schools are currently available in the system.</p>
    }
</div>