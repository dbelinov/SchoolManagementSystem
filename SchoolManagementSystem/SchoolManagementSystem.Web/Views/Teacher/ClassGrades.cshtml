@model IEnumerable<TeacherGradesViewModel>

@{
    ViewData["Title"] = "Grades Overview";
}

<h2 class="text-center my-4">All Grades</h2>

@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <thead class="thead-dark">
            <tr>
                <th scope="col">Student Name</th>
                <th scope="col">Grades</th>
                <th scope="col">Add Grade</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td class="align-middle subject-cell">@student.StudentName</td>
                    <td>
                        <div class="d-flex flex-wrap gap-2">
                            @foreach (var grade in student.Grades)
                            {
                                <form asp-action="DeleteGrade" method="post" class="d-inline">
                                    <input type="hidden" name="gradeId" value="@grade.Id" />
                                    <input type="hidden" name="studentId" value="@student.StudentId" />
                                    <button
                                        type="submit"
                                        class="badge grade-badge grade-@grade.GradeValue"
                                        title="Click to delete grade">
                                        @grade.GradeValue
                                    </button>
                                </form>
                            }
                        </div>
                    </td>
                    <td class="text-center">
                        <div class="d-flex flex-wrap gap-2">
                            @for (int grade = 2; grade <= 6; grade++)
                            {
                                <form asp-action="AddGrade" method="post" class="d-inline">
                                    <input type="hidden" name="gradeValue" value="@grade" />
                                    <input type="hidden" name="studentId" value="@student.StudentId" />
                                    <button
                                        type="submit"
                                        class="badge grade-badge grade-btn grade-@grade"
                                        title="Click to add grade @grade">
                                        @grade
                                    </button>
                                </form>
                            }
                        </div>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-warning text-center">
        No grades available for any students.
    </div>
}

<style>
    /* General Grade Button Styles */
    .grade-badge {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 40px;
        height: 40px;
        font-size: 1rem;
        font-weight: bold;
        border-radius: 0.5rem;
        cursor: pointer;
        border: none;
    }

    /* Add Grade Button Colors */
    .grade-6 {
        background-color: #28a745; /* Green */
        color: white;
    }

    .grade-5 {
        background-color: #007bff; /* Blue */
        color: white;
    }

    .grade-4 {
        background-color: #ffc107; /* Yellow */
        color: black;
    }

    .grade-3 {
        background-color: #fd7e14; /* Orange */
        color: white;
    }

    .grade-2 {
        background-color: #dc3545; /* Red */
        color: white;
    }

    /* Hover Effects for Add Grade Buttons */
    .grade-6:hover {
        background-color: #218838; /* Darker green */
    }

    .grade-5:hover {
        background-color: #0056b3; /* Darker blue */
    }

    .grade-4:hover {
        background-color: #e0a800; /* Darker yellow */
    }

    .grade-3:hover {
        background-color: #e85900; /* Darker orange */
    }

    .grade-2:hover {
        background-color: #c82333; /* Darker red */
    }
</style>