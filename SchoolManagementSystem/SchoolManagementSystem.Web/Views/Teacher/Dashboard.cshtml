@model TeacherDashboardViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = "Teacher Dashboard";
}

<div class="container mt-5">
    <!-- Header -->
    <h1 class="text-center mb-4">@Localizer["Title"]</h1>

    <div class="row">
        <!-- Average Grade -->
        <div class="col-md-6">
            <div class="card text-center bg-primary text-white">
                <div class="card-body">
                    <h3>@Localizer["AverageGrade"]</h3>
                    <p class="display-4">@Model.AverageGrade</p>
                </div>
            </div>
        </div>

        <!-- Grade Count -->
        <div class="col-md-6">
            <div class="card text-center bg-success text-white">
                <div class="card-body">
                    <h3>@Localizer["GradesCount"]</h3>
                    <p class="display-4">@Model.GradesCount</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <!-- Navigation Buttons -->
        <div class="col-md-6">
            <a asp-action="GradesDashboard" class="btn btn-lg btn-secondary w-100">@Localizer["AllGrades"]</a>
        </div>
        <div class="col-md-6">
            <a asp-action="Scoreboard" class="btn btn-lg btn-secondary w-100">@Localizer["Scoreboard"]</a>
        </div>
    </div>
</div>