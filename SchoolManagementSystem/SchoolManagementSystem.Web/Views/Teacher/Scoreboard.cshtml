@model ScoreboardViewModel

@{
    ViewData["Title"] = "Scoreboard";
}

<h2 style="margin-bottom: 1.5rem; text-align: center;">Scoreboard</h2>

<div style="display: flex; justify-content: center; gap: 2rem;">

    <div style="width: 45%;">
        <h3 style="text-align: center; margin-bottom: 1rem;">Students Scoreboard</h3>
        <table class="table table-striped table-bordered" style="margin: 0 auto;">
            <thead>
            <tr>
                <th>Student Name</th>
                <th>Class Name</th>
                <th>Average Grade</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var student in Model.StudentScores)
            {
                <tr>
                    <td>@student.FullName</td>
                    <td>@student.ClassName</td>
                    <td>@student.AverageGrade</td>
                </tr>
            }
            </tbody>
        </table>
    </div>

    <div style="width: 45%;">
        <h3 style="text-align: center; margin-bottom: 1rem;">Classes Scoreboard</h3>
        <table class="table table-striped table-bordered" style="margin: 0 auto;">
            <thead>
            <tr>
                <th>Class Name</th>
                <th>Class Average Grade</th>
                <th>Students Count</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var classScore in Model.ClassScores)
            {
                <tr>
                    <td>@classScore.ClassName</td>
                    <td>@classScore.AverageGrade</td>
                    <td>@classScore.StudentsCount</td>
                </tr>
            }
            </tbody>
        </table>
    </div>

</div>

<!-- Add some styling -->
<style>
    .table {
        width: 100%;
    }
    h3 {
        margin-bottom: 1rem;
    }
    h2 {
        margin-bottom: 3rem; 
    }
    
    .table-container {
        display: flex;
        justify-content: center;
        gap: 2rem;
    }
    .table-container .table {
        margin-top: 1rem;
    }
</style>